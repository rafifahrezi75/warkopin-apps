<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    tools:context=".HistoryProsesActivity">

    <TextView
        android:id="@+id/tvjudulhistory"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:fontFamily="@font/poppins_semibold"
        android:gravity="center"
        android:text="History Order"
        android:textColor="#333333"
        android:textSize="25sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view3"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="16dp"
        android:alpha="0.3"
        android:background="#9b9b9b"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tvjudulhistory"></View>


    <LinearLayout
        android:id="@+id/linearLayout7"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:orientation="horizontal"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/view3">

        <Button
            android:id="@+id/btnselesai"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginEnd="4dp"
            android:layout_weight="1"
            android:backgroundTint="#BCBCBC"
            android:fontFamily="@font/poppins_medium"
            android:onClick="selesaipage"
            android:text="Selesai"
            android:textColor="#333333"
            app:cornerRadius="8dp" />

        <Button
            android:id="@+id/btnproses"
            android:layout_width="match_parent"
            android:layout_height="58dp"
            android:layout_marginStart="4dp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_semibold"
            android:text="Dalam Proses"
            app:cornerRadius="8dp" />
    </LinearLayout>

    <SearchView
        android:id="@+id/searchViewHistoryProses"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        android:background="@drawable/form"
        android:onClick="filter"
        app:searchIcon="@drawable/ic_calendar"
        android:iconifiedByDefault="false"
        android:queryHint="Filter Tanggal"
        app:iconifiedByDefault="false"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/linearLayout7" />

    <ScrollView
        android:layout_width="0dp"
        android:layout_height="576dp"
        android:layout_marginStart="16dp"
        android:layout_marginTop="16dp"
        android:layout_marginEnd="16dp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/searchViewHistoryProses">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/recyclerviewhistoryproses"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            tools:listitem="@layout/historyproses_widget"/>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bg_white"
        android:gravity="center"
        android:orientation="horizontal"
        app:layout_constraintBottom_toBottomOf="parent">

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="60dp"
            android:gravity="center"
            android:onClick="homepagefhistoryproses"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/homeicon"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/homes_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Home"
                android:textColor="#333333"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="60dp"
            android:gravity="center"
            android:onClick="cartpagefhistoryproses"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/carticon"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/cart_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Cart"
                android:textColor="#333333"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="60dp"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/historyicon"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/history_active" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="History"
                android:textColor="#147553"
                android:textSize="10sp" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:layout_marginEnd="0dp"
            android:gravity="center"
            android:onClick="profilepagefhistoryproses"
            android:orientation="vertical">


            <ImageView
                android:id="@+id/akunicon"
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_marginTop="5dp"
                android:layout_weight="1"
                app:srcCompat="@drawable/akun_icon" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/poppins_medium"
                android:text="Profile"
                android:textColor="#333333"
                android:textSize="10sp" />

        </LinearLayout>

    </LinearLayout>

</androidx.constraintlayout.widget.ConstraintLayout>