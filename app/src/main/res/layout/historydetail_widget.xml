<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="-18sp">

    <ImageView
        android:id="@+id/imageViewHistoryDetail"
        android:layout_width="59sp"
        android:layout_height="59sp"
        android:layout_marginTop="16sp"
        android:layout_marginBottom="16sp"
        android:src="#333333" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="16dp"
        android:orientation="vertical">

        <View
            android:layout_width="100dp"
            android:layout_height="23sp" />

        <TextView
            android:id="@+id/tvnamamenuhistorydetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:text="Ayam Geprek"
            android:textColor="#333333"
            android:textSize="14sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvkategorimenuhistorydetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_medium"
            android:text="Makanan"
            android:textColor="#9b9b9b"
            android:textSize="12sp"
            android:textStyle="bold" />

        <View
            android:layout_width="100dp"
            android:layout_height="23sp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/tvjumlahmenuhistorydetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4sp"
            android:layout_weight="1"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="end"
            android:text="2"
            android:textColor="#333333"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="4sp"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="end"
            android:text="X"
            android:textColor="#333333"
            android:textSize="12sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvhargamenuhistorydetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/poppins_semibold"
            android:gravity="end"
            android:text="Rp 20000"
            android:textColor="@color/my_primary"
            android:textSize="12sp"
            android:textStyle="bold" />
    </LinearLayout>

</LinearLayout>